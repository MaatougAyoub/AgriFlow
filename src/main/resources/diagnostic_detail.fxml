<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #F0F2F5;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DiagnosticDetailController">

    <children>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: #F0F2F5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <children>
                <VBox maxWidth="1200" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25;" VBox.vgrow="ALWAYS">
                    <effect><DropShadow color="#00000015" radius="15" /></effect>

                    <children>
                        <HBox spacing="20" VBox.vgrow="SOMETIMES">
                            <children>
                                <ImageView fx:id="imgCulture" fitHeight="250.0" fitWidth="350.0" preserveRatio="true" />

                                <VBox spacing="10" HBox.hgrow="ALWAYS">
                                    <Label fx:id="lblCulture" style="-fx-font-size: 26; -fx-font-weight: bold;" textFill="#2d5a27" />
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Description du problème :">
                              <VBox.margin>
                                 <Insets />
                              </VBox.margin></Label>
                                    <Label fx:id="txtDescriptionDisplay"
                                           wrapText="true"
                                           maxWidth="Infinity"
                                           style="-fx-text-fill: #444; -fx-font-size: 10px;" />
                                </VBox>
                            </children>
                        </HBox>

                        <Separator />
                        <VBox spacing="10">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #2d5a27;" text="RECOMMANDATION DE PRODUIT" />
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <children>
                                    <ComboBox fx:id="comboProduits" prefWidth="300.0" promptText="Choisir un produit préconisé..." style="-fx-background-radius: 8;" />

                                    <Button onAction="#ajouterProduitAReponse" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" text="Ajouter au diagnostic" />
                                </children>
                            </HBox>
                        </VBox>

                        <VBox spacing="10" VBox.vgrow="ALWAYS">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #2d5a27;" text="VOTRE DIAGNOSTIC EXPERT" />
                            <TextArea fx:id="txtReponseExpert" promptText="Écrivez vos recommandations ici..." style="-fx-background-radius: 10;" wrapText="true" VBox.vgrow="ALWAYS" />
                        </VBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15">
                            <Button onAction="#retour" prefHeight="40" prefWidth="100" style="-fx-background-color: #DDD; -fx-background-radius: 8; -fx-cursor: hand;" text="Retour" />    
                            <Button onAction="#goBack" prefHeight="40" prefWidth="100" style="-fx-background-color: #DDD; -fx-background-radius: 8; -fx-cursor: hand;" text="Annuler" />
                            <Button onAction="#enregistrerReponse" prefHeight="40" style="-fx-background-color: #2D5A27; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 25; -fx-cursor: hand;" text="Envoyer la réponse" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
