<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<VBox fx:id="cardContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.AnnonceCardController"
      spacing="0" prefWidth="280"
      style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 3);">

    <!-- Zone image avec badges superposÃ©s -->
    <StackPane prefHeight="160" maxHeight="160" style="-fx-background-radius: 12 12 0 0;">
        <!-- Image de l'annonce -->
        <ImageView fx:id="annonceImageView" fitWidth="280" fitHeight="160"
                   preserveRatio="false" smooth="true"
                   style="-fx-background-radius: 12 12 0 0;">
            <clip>
                <Rectangle width="280" height="160" arcWidth="24" arcHeight="24"/>
            </clip>
        </ImageView>

        <!-- Placeholder colorÃ© si pas d'image -->
        <VBox fx:id="imagePlaceholder" alignment="CENTER" spacing="5"
              style="-fx-background-color: linear-gradient(to bottom right, #3E7B36, #2D5A27); -fx-background-radius: 12 12 0 0;">
            <Label fx:id="placeholderIcon" text="ðŸšœ" style="-fx-font-size: 42px;"/>
            <Label fx:id="placeholderText" text="Tracteur"
                   style="-fx-font-size: 13px; -fx-text-fill: rgba(255,255,255,0.85); -fx-font-weight: bold;"/>
        </VBox>

        <!-- Badge type (coin supÃ©rieur gauche) -->
        <HBox StackPane.alignment="TOP_LEFT" spacing="5">
            <padding>
                <Insets top="10" left="10"/>
            </padding>
            <Label fx:id="typeLabel" text="LOCATION"
                   style="-fx-background-color: rgba(33,150,243,0.9); -fx-text-fill: white; -fx-padding: 3 10; -fx-background-radius: 4; -fx-font-size: 11; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Indicateur statut (coin supÃ©rieur droit) -->
        <Circle fx:id="statutIndicator" radius="6" fill="#76B900" StackPane.alignment="TOP_RIGHT">
            <StackPane.margin>
                <Insets top="10" right="10"/>
            </StackPane.margin>
        </Circle>
    </StackPane>

    <!-- Informations de l'annonce -->
    <VBox spacing="4" style="-fx-padding: 12 14 6 14;">
        <Label fx:id="titreLabel" text="Titre de l'annonce"
               style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #333333;" wrapText="true"/>
        <Label fx:id="categorieLabel" text="CatÃ©gorie"
               style="-fx-font-size: 12px; -fx-text-fill: #76B900; -fx-font-weight: bold;"/>
        <HBox spacing="5" alignment="CENTER_LEFT">
            <SVGPath content="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                     fill="#9E9E9E" scaleX="0.6" scaleY="0.6"/>
            <Label fx:id="localisationLabel" text="Localisation"
                   style="-fx-font-size: 11px; -fx-text-fill: #757575;"/>
        </HBox>
    </VBox>

    <!-- Bas de la carte : prix + propriÃ©taire + bouton -->
    <VBox spacing="6" style="-fx-padding: 4 14 12 14;">
        <HBox alignment="CENTER_LEFT" spacing="5">
            <Label fx:id="prixLabel" text="100 DT/jour"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="4" alignment="CENTER_LEFT">
                <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                         fill="#9E9E9E" scaleX="0.55" scaleY="0.55"/>
                <Label fx:id="proprietaireLabel" text="Nom"
                       style="-fx-font-size: 11px; -fx-text-fill: #9E9E9E;"/>
            </HBox>
        </HBox>

        <!-- Boutons d'action -->
        <HBox spacing="8" alignment="CENTER_LEFT">
            <!-- Boutons Admin (PropriÃ©taire uniquement) -->
            <Button fx:id="btnEdit" onAction="#onEditClick"
                    styleClass="btn-warning-outline"
                    visible="false" managed="false">
                <graphic>
                    <SVGPath content="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                             fill="#F57C00" scaleX="0.65" scaleY="0.65"/>
                </graphic>
            </Button>
            <Button fx:id="btnDelete" onAction="#onDeleteClick"
                    styleClass="btn-danger-outline"
                    visible="false" managed="false">
                <graphic>
                    <SVGPath content="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                             fill="#E53935" scaleX="0.65" scaleY="0.65"/>
                </graphic>
            </Button>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- Bouton RÃ©server -->
            <Button fx:id="reserverBtn" text="RÃ©server"
                    onAction="#onReserveClick"
                    styleClass="action-button"
                    style="-fx-font-size: 11px; -fx-padding: 6 14;">
                <graphic>
                    <SVGPath content="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"
                             fill="white" scaleX="0.6" scaleY="0.6"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>

</VBox>
