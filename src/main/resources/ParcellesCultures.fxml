<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.ParcellesCulturesController"
            fx:id="root"
            prefWidth="1200.0" prefHeight="720.0"
            style="-fx-background-color: #F4F6F3;">

    <top>
        <HBox spacing="12" alignment="CENTER_LEFT"
              style="-fx-background-color: white; -fx-padding: 18; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 2);">
            <Label text="Parcelles &amp; Cultures"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>
            <Region HBox.hgrow="ALWAYS"/>
             </HBox>
    </top>

    <center>
        <VBox spacing="18" alignment="TOP_CENTER">
            <padding>
                <Insets top="26" right="26" bottom="26" left="26"/>
            </padding>

            <Label text="Choisissez une section"
                   style="-fx-font-size: 14px; -fx-text-fill: #6b6b6b;"/>

            <HBox spacing="18" alignment="CENTER">

                <VBox spacing="12"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 16; -fx-border-color: rgba(0,0,0,0.08); -fx-border-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 3);"
                      prefWidth="340" prefHeight="360">
                    <ImageView fitWidth="308" fitHeight="230" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/gestion_parcelles.png"/>
                        </image>
                    </ImageView>

                    <Label text="Gestion Parcelles"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>

                    <Button text="Ouvrir"
                            maxWidth="1.7976931348623157E308"
                            onAction="#openGestionParcelles"
                            style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 14; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="12"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 16; -fx-border-color: rgba(0,0,0,0.08); -fx-border-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 3);"
                      prefWidth="340" prefHeight="360">
                    <ImageView fitWidth="308" fitHeight="230" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/gestion_cultures.png"/>
                        </image>
                    </ImageView>

                    <Label text="Gestion Cultures"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>

                    <Button text="Ouvrir"
                            maxWidth="1.7976931348623157E308"
                            onAction="#openGestionCultures"
                            style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 14; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                </VBox>

                <VBox spacing="12"
                      style="-fx-background-color: white; -fx-background-radius: 14; -fx-padding: 16; -fx-border-color: rgba(0,0,0,0.08); -fx-border-radius: 14; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 10, 0, 0, 3);"
                      prefWidth="340" prefHeight="360">
                    <ImageView fitWidth="308" fitHeight="230" preserveRatio="true" smooth="true">
                        <image>
                            <Image url="@images/cultures_vente.png"/>
                        </image>
                    </ImageView>

                    <Label text="Cultures Ã  vendre"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>

                    <Button text="Ouvrir"
                            maxWidth="1.7976931348623157E308"
                            onAction="#openCulturesEnVente"
                            style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 14; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
