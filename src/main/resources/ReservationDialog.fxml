<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ReservationDialogController"
      spacing="15" style="-fx-background-color: white;" prefWidth="500"
      stylesheets="@styles.css">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <SVGPath content="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z"
                 fill="#2D5A27" scaleX="1.0" scaleY="1.0"/>
        <Label text="Faire une réservation" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>
    </HBox>

    <VBox spacing="5" style="-fx-background-color: #E8F5E9; -fx-padding: 15; -fx-background-radius: 8;">
        <Label fx:id="titreAnnonceLabel" text="Titre de l'annonce" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <Label fx:id="prixUnitaireLabel" text="Prix: 100 DT/jour" style="-fx-font-size: 14px; -fx-text-fill: #2D5A27; -fx-font-weight: bold;"/>
    </VBox>

    <HBox spacing="15">
        <VBox spacing="5">
            <Label text="Date de début *" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="dateDebutPicker"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Date de fin *" style="-fx-font-weight: bold;"/>
            <DatePicker fx:id="dateFinPicker"/>
        </VBox>
    </HBox>

    <Label fx:id="dureeLabel" text="Durée: 1 jour(s)" style="-fx-font-size: 12px; -fx-text-fill: #757575;"/>
    <Label fx:id="prixTotalLabel" text="Prix total: 100 DT" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>

    <VBox spacing="5">
        <Label text="Message au propriétaire (optionnel)" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="messageArea" promptText="Bonjour, je suis intéressé..." prefRowCount="3" wrapText="true"/>
    </VBox>

    <Label fx:id="errorLabel" style="-fx-text-fill: #E53935;" visible="false" wrapText="true"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Confirmer" styleClass="action-button"
                onAction="#onConfirmer">
            <graphic>
                <SVGPath content="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"
                         fill="white" scaleX="0.7" scaleY="0.7"/>
            </graphic>
        </Button>
        <Button text="Annuler" styleClass="btn-secondary"
                onAction="#onAnnuler"/>
    </HBox>

</VBox>
