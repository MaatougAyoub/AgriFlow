<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ListeReclamations"
            prefHeight="760.0" prefWidth="1200.0"
            style="-fx-background-color: #F5F5F5; -fx-font-size: 16px;">

    <top>
        <VBox spacing="14" style="-fx-background-color: white;">
            <padding>
                <Insets top="22" right="26" bottom="22" left="26"/>
            </padding>

            <Label text="AgriFlow - Réclamations"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

            <Label text="Gestion des réclamations"
                   style="-fx-font-size: 18px; -fx-text-fill: #2E7D32;"/>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" style="-fx-font-size: 16px;">
            <tabs>

                <!-- TAB 1: Liste -->
                <Tab text="Liste des réclamations">
                    <VBox spacing="16">
                        <padding>
                            <Insets top="20" right="26" bottom="20" left="26"/>
                        </padding>

                        <HBox spacing="14" alignment="CENTER_LEFT">
                            <!-- ✅ filtre catégorie -->
                            <Label text="Catégorie:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <ComboBox fx:id="categorieFilterCombo" prefWidth="220" prefHeight="40"/>

                            <TextField fx:id="searchField" promptText="Rechercher par titre / description / email..." HBox.hgrow="ALWAYS" prefHeight="40" style="-fx-font-size: 16px;"/>

                            <Button text="Rechercher" onAction="#rechercher"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 22; -fx-font-size: 16px;"/>

                            <Button text="Rafraîchir" onAction="#rafraichir"
                                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 10 22; -fx-font-size: 16px;"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button text="Retour profil" onAction="#retourProfil"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 22; -fx-font-size: 16px;"/>
                        </HBox>

                        <TableView fx:id="table" prefHeight="600.0" style="-fx-font-size: 15px; -fx-fixed-cell-size: 40px;">
                            <columns>
                                <TableColumn fx:id="colNom" text="Nom"/>
                                <TableColumn fx:id="colPrenom" text="Prénom"/>
                                <TableColumn fx:id="colRole" text="Rôle"/>
                                <TableColumn fx:id="colEmail" text="Email"/>
                                <TableColumn fx:id="colCategorie" text="Catégorie"/>
                                <TableColumn fx:id="colTitre" text="Titre"/>
                                <TableColumn fx:id="colDescription" text="Description"/>
                                <TableColumn fx:id="colDate" text="Date création"/>
                                <TableColumn fx:id="colStatut" text="Statut"/>
                                <TableColumn fx:id="colReponse" text="Réponse"/>
                                <TableColumn fx:id="colActions" text="Actions"/>
                            </columns>
                        </TableView>

                        <Label fx:id="countLabel" text="0 réclamation(s)" style="-fx-text-fill: #616161; -fx-font-size: 15px;"/>
                    </VBox>
                </Tab>

                <!-- TAB 2: Ajouter -->
                <Tab text="Ajouter réclamation">
                    <VBox spacing="18">
                        <padding>
                            <Insets top="24" right="30" bottom="24" left="30"/>
                        </padding>

                        <Label text="Nouvelle réclamation"
                               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                        <Label fx:id="addErrorLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #F44336; -fx-background-color: #FFEBEE; -fx-padding: 12; -fx-background-radius: 6; -fx-font-size: 15px;"/>

                        <Label fx:id="addSuccessLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #2E7D32; -fx-background-color: #E8F5E9; -fx-padding: 12; -fx-background-radius: 6; -fx-font-size: 15px;"/>

                        <GridPane vgap="16" hgap="24">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="200"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Catégorie *" style="-fx-font-size: 16px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="categorieAddCombo" prefHeight="40" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Titre *" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="titreField" prefHeight="40" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Description *" style="-fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextArea fx:id="descriptionArea" prefRowCount="8" wrapText="true" style="-fx-font-size: 16px;"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </GridPane>

                        <HBox spacing="12" alignment="CENTER_RIGHT">
                            <Button text="Annuler" onAction="#annulerAjout"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 12 22; -fx-font-size: 16px;"/>

                            <Button text="Valider réclamation" onAction="#validerAjout"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 12 22; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                        </HBox>
                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </center>

</BorderPane>