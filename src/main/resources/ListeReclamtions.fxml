<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ListeReclamations"
            prefHeight="650.0" prefWidth="1100.0"
            style="-fx-background-color: #F5F5F5;">

    <top>
        <VBox spacing="10" style="-fx-background-color: white;">
            <padding>
                <Insets top="16" right="18" bottom="16" left="18"/>
            </padding>

            <Label text="AgriFlow - Réclamations"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

            <Label text="Gestion des réclamations"
                   style="-fx-font-size: 14px; -fx-text-fill: #2E7D32;"/>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- TAB 1: Liste -->
                <Tab text="Liste des réclamations">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="14" right="18" bottom="14" left="18"/>
                        </padding>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <!-- ✅ filtre catégorie -->
                            <Label text="Catégorie:" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="categorieFilterCombo" prefWidth="180"/>

                            <TextField fx:id="searchField" promptText="Rechercher par titre / description / email..." HBox.hgrow="ALWAYS"/>

                            <Button text="Rechercher" onAction="#rechercher"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 8 18;"/>

                            <Button text="Rafraîchir" onAction="#rafraichir"
                                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 8 18;"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button text="Retour profil" onAction="#retourProfil"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 18;"/>
                        </HBox>

                        <TableView fx:id="table" prefHeight="520.0">
                            <columns>
                                <TableColumn fx:id="colNom" text="Nom"/>
                                <TableColumn fx:id="colPrenom" text="Prénom"/>
                                <TableColumn fx:id="colRole" text="Rôle"/>
                                <TableColumn fx:id="colEmail" text="Email"/>
                                <TableColumn fx:id="colCategorie" text="Catégorie"/>
                                <TableColumn fx:id="colTitre" text="Titre"/>
                                <TableColumn fx:id="colDescription" text="Description"/>
                                <TableColumn fx:id="colDate" text="Date création"/>
                                <TableColumn fx:id="colStatut" text="Statut"/>
                                <TableColumn fx:id="colReponse" text="Réponse"/>
                                <TableColumn fx:id="colActions" text="Actions"/>
                            </columns>
                        </TableView>

                        <Label fx:id="countLabel" text="0 réclamation(s)" style="-fx-text-fill: #616161;"/>
                    </VBox>
                </Tab>

                <!-- TAB 2: Ajouter -->
                <Tab text="Ajouter réclamation">
                    <VBox spacing="14">
                        <padding>
                            <Insets top="18" right="22" bottom="18" left="22"/>
                        </padding>

                        <Label text="Nouvelle réclamation"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                        <Label fx:id="addErrorLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #F44336; -fx-background-color: #FFEBEE; -fx-padding: 10; -fx-background-radius: 6;"/>

                        <Label fx:id="addSuccessLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #2E7D32; -fx-background-color: #E8F5E9; -fx-padding: 10; -fx-background-radius: 6;"/>

                        <GridPane vgap="12" hgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="130" prefWidth="170"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Catégorie *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="categorieAddCombo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Titre *" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="titreField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Description *" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextArea fx:id="descriptionArea" prefRowCount="6" wrapText="true"
                                      GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        </GridPane>

                        <HBox spacing="12" alignment="CENTER_RIGHT">
                            <Button text="Annuler" onAction="#annulerAjout"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 18;"/>

                            <Button text="Valider réclamation" onAction="#validerAjout"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 18; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </center>

</BorderPane>