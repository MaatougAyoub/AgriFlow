<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.CulturesEnVente"
            style="-fx-background-color: #F4F6F3;"
            prefWidth="1200" prefHeight="720">

    <top>
        <VBox spacing="12" style="-fx-background-color: white;">
            <padding>
                <Insets top="18" right="20" bottom="18" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="12">
                <Label text="Cultures en vente"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>
                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Retour"
                        onAction="#retourParcellesCultures"
                        style="-fx-background-color:#2E7D32; -fx-text-fill:white; -fx-padding: 10 16; -fx-background-radius: 10;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Rechercher par nom..."
                           style="-fx-padding: 10 14; -fx-background-radius: 10;"
                           HBox.hgrow="ALWAYS"/>

                <Button fx:id="btnRafraichir" text="Rafraîchir" onAction="#rafraichir"
                        style="-fx-background-color:#2E7D32; -fx-text-fill:white; -fx-padding: 10 16; -fx-background-radius: 10;"/>

                <Label fx:id="countLabel" text="0"
                       style="-fx-text-fill:#616161; -fx-padding: 0 0 0 10;"/>
            </HBox>

            <Label fx:id="errorLabel" visible="false" managed="false"
                   style="-fx-text-fill:#D32F2F; -fx-background-color:#FFEBEE; -fx-padding:10; -fx-background-radius:10;"/>
        </VBox>
    </top>

    <center>
        <StackPane style="-fx-padding: 16;">

            <!-- ADMIN PANE -->
            <VBox fx:id="adminPane" spacing="10" visible="false" managed="false">
                <TableView fx:id="table" prefHeight="600">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colProprietaireId" text="Propriétaire ID" prefWidth="120"/>
                        <TableColumn fx:id="colNom" text="Nom" prefWidth="180"/>
                        <TableColumn fx:id="colType" text="Type" prefWidth="140"/>
                        <TableColumn fx:id="colSuperficie" text="Superficie (m²)" prefWidth="140"/>
                        <TableColumn fx:id="colRecolteEstime" text="Récolte estimée (Kg)" prefWidth="170"/>
                        <TableColumn fx:id="colDateRecolte" text="Date récolte" prefWidth="140"/>
                        <TableColumn fx:id="colActions" text="Actions" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- AGRICULTEUR PANE -->
            <VBox fx:id="agriculteurPane" spacing="10" visible="false" managed="false">
                <ScrollPane fx:id="cardsScroll" fitToWidth="true"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <content>
                        <VBox fx:id="cardsContainer" spacing="14" style="-fx-padding: 4;"/>
                    </content>
                </ScrollPane>
            </VBox>

        </StackPane>
    </center>

</BorderPane>