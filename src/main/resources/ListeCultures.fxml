<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ListeCultures"
            prefHeight="650.0" prefWidth="1100.0"
            style="-fx-background-color: #F5F5F5;">

    <top>
        <VBox spacing="10" style="-fx-background-color: white;">
            <padding>
                <Insets top="16" right="18" bottom="16" left="18"/>
            </padding>

            <Label text="AgriFlow - Mes cultures"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

            <Label text="Gestion de mes cultures"
                   style="-fx-font-size: 14px; -fx-text-fill: #2E7D32;"/>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- TAB 1: Liste en cards -->
                <Tab text="Mes cultures">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="14" right="18" bottom="14" left="18"/>
                        </padding>

                        <HBox spacing="10" alignment="CENTER_LEFT">

                            <Label text="Etat:" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="etatFilterCombo" prefWidth="180"/>

                            <Label text="Type:" style="-fx-font-weight: bold;"/>
                            <ComboBox fx:id="typeFilterCombo" prefWidth="180"/>

                            <TextField fx:id="searchField"
                                       promptText="Rechercher par nom..."
                                       HBox.hgrow="ALWAYS"/>

                            <Button text="Rechercher" onAction="#rechercher"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 8 18;"/>

                            <Button text="Rafraichir" onAction="#rafraichir"
                                    style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 8 18;"/>

                            <Region HBox.hgrow="ALWAYS"/>

                            <Button text="Retour profil" onAction="#retourProfil"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 8 18;"/>
                        </HBox>

                        <Label fx:id="countLabel" text="0 culture(s)" style="-fx-text-fill: #616161;"/>

                        <ScrollPane fitToWidth="true" style="-fx-background-color:transparent;">
                            <content>
                                <FlowPane fx:id="cardsPane"
                                          hgap="18" vgap="18"
                                          prefWrapLength="980"
                                          style="-fx-background-color:transparent;"/>
                            </content>
                        </ScrollPane>
                    </VBox>
                </Tab>

                <!-- TAB 2: Ajouter -->
                <Tab text="Ajouter culture">
                    <VBox spacing="14">
                        <padding>
                            <Insets top="18" right="22" bottom="18" left="22"/>
                        </padding>

                        <Label text="Nouvelle culture"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                        <Label fx:id="addErrorLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #F44336; -fx-background-color: #FFEBEE; -fx-padding: 10; -fx-background-radius: 6;"/>

                        <Label fx:id="addSuccessLabel"
                               visible="false"
                               wrapText="true"
                               style="-fx-text-fill: #2E7D32; -fx-background-color: #E8F5E9; -fx-padding: 10; -fx-background-radius: 6;"/>

                        <GridPane vgap="12" hgap="12">
                            <columnConstraints>
                                <ColumnConstraints minWidth="160" prefWidth="190"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="Parcelle ID *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="parcelleIdField" promptText="ex: 10"
                                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Nom *" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="nomField" promptText="Nom culture"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Type culture *" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="typeCultureCombo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Superficie(m2) *" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="superficieField" promptText="ex: 120.5"
                                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <!-- ETAT SUPPRIME ICI: creation = EN_COURS par defaut -->

                            <Label text="Date recolte *" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dateRecoltePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Label text="Recolte estimee (Kg)" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextField fx:id="recolteEstimeField" promptText="ex: 500 (optionnel)"
                                       GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        </GridPane>

                        <HBox spacing="12" alignment="CENTER_RIGHT">
                            <Button text="Annuler" onAction="#annulerAjout"
                                    style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 18;"/>

                            <Button text="Valider culture" onAction="#validerAjout"
                                    style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 18; -fx-font-weight: bold;"/>
                        </HBox>
                    </VBox>
                </Tab>

            </tabs>
        </TabPane>
    </center>

</BorderPane>
