<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SignIn"
            prefHeight="500.0" prefWidth="700.0"
            style="-fx-background-color: #F5F5F5;">

    <!-- Carte centrée -->
    <VBox alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <VBox spacing="18"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 18, 0, 0, 6); -fx-max-width: 420;"
              alignment="CENTER">
            <padding>
                <Insets top="28" right="32" bottom="28" left="32"/>
            </padding>

            <!-- Titre -->
            <Label text="Connexion"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

            <!-- Message erreur -->
            <Label fx:id="errorLabel"
                   visible="false"
                   wrapText="true"
                   style="-fx-text-fill: #F44336; -fx-background-color: #FFEBEE; -fx-padding: 10; -fx-background-radius: 6;"/>

            <!-- Message succès -->
            <Label fx:id="successLabel"
                   visible="false"
                   wrapText="true"
                   style="-fx-text-fill: #2E7D32; -fx-background-color: #E8F5E9; -fx-padding: 10; -fx-background-radius: 6;"/>

            <!-- Formulaire -->
            <GridPane vgap="12" hgap="12">
                <columnConstraints>
                    <ColumnConstraints minWidth="90" prefWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Email *" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="exemple@email.com"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Mot de passe *" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="motDePasseField" promptText="********"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- Options -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="rememberMeCheck" text="Se souvenir de moi" />
                <Region HBox.hgrow="ALWAYS"/>
                <Hyperlink text="Mot de passe oublié ?" onAction="#motDePasseOublie"/>
            </HBox>

            <!-- Boutons -->
            <HBox spacing="14" alignment="CENTER">
                <Button text="Se connecter"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 10 26; -fx-font-size: 14px; -fx-font-weight: bold;"
                        onAction="#seConnecter"/>

                <Button text="Annuler"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 10 26; -fx-font-size: 14px;"
                        onAction="#annuler"/>
            </HBox>

            <!-- Redirection vers inscription -->
            <HBox alignment="CENTER" spacing="6">
                <Label text="Vous n'avez pas de compte ?" style="-fx-text-fill: #757575;"/>
                <Hyperlink text="Créer un compte" style="-fx-text-fill: #2E7D32;" onAction="#allerVersInscription"/>
            </HBox>

        </VBox>
    </VBox>

</AnchorPane>