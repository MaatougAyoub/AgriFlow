<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.MarketplaceController"
      spacing="15" style="-fx-background-color: #F4F6F3;"
      stylesheets="@styles.css">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="15" alignment="CENTER_LEFT">
        <SVGPath content="M12 3L1 9l4 2.18v6L12 21l7-3.82v-6l2-1.09V17h2V9L12 3zm6.82 6L12 12.72 5.18 9 12 5.28 18.82 9zM17 15.99l-5 2.73-5-2.73v-3.72L12 15l5-2.73v3.72z"
                 fill="#2D5A27" scaleX="1.3" scaleY="1.3"/>
        <Label text="Marketplace Agriflow" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2D5A27;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Publier une annonce" styleClass="action-button"
                onAction="#openAjouterAnnonce">
            <graphic>
                <SVGPath content="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"
                         fill="white" scaleX="0.8" scaleY="0.8"/>
            </graphic>
        </Button>
    </HBox>

    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 6, 0, 0, 2);">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <SVGPath content="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                     fill="#9E9E9E" scaleX="0.8" scaleY="0.8"/>
            <TextField fx:id="searchField" promptText="Rechercher par titre, description, catÃ©gorie..."
                       style="-fx-padding: 10 15; -fx-background-radius: 8;" HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="typeFilter" promptText="Type" prefWidth="200"
                      style="-fx-background-radius: 8;"/>
        </HBox>
    </VBox>

    <Label fx:id="resultCountLabel" text="Chargement..." style="-fx-font-size: 14px; -fx-text-fill: #757575;"/>

    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
        <FlowPane fx:id="annoncesContainer" hgap="15" vgap="15"/>
    </ScrollPane>

</VBox>
