<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ModifierProfil"
            prefHeight="700.0" prefWidth="1000.0"
            fitToWidth="true"
            >


    <VBox spacing="20" style="-fx-background-color: white;">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <Label text="Modifier mon profil"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

        <Label fx:id="roleLabel"
               text="Rôle: -"
               style="-fx-font-size: 14px; -fx-text-fill: #616161; -fx-font-weight: bold;"/>

        <Label fx:id="errorLabel"
               visible="false"
               wrapText="true"
             style="-fx-text-fill: #F44336; -fx-background-color: #FFEBEE; -fx-padding: 10; -fx-background-radius: 5;"/>

        <Label fx:id="successLabel"
               visible="false"
               wrapText="true"
             style="-fx-text-fill: #2E7D32; -fx-background-color: #E8F5E9; -fx-padding: 10; -fx-background-radius: 5;"/>

        <Separator/>

        <!-- Etape 1 : édition -->
        <VBox fx:id="stepEditBox" spacing="14">

            <Label text="Informations générales"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

            <GridPane vgap="17" hgap="80">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nom *" style="-fx-font-size: 21px" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nomField" style="-fx-font-size: 18px" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Prénom *" style="-fx-font-size: 21px" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="prenomField" style="-fx-font-size: 18px" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Email *" style="-fx-font-size: 21px" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" style="-fx-font-size: 18px" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- ✅ Signature upload -->
                <Label text="Signature" style="-fx-font-size: 21px" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <TextField fx:id="signaturePathField"
                               style="-fx-font-size: 18px"
                               editable="false"
                               promptText="Aucun fichier sélectionné"
                               HBox.hgrow="ALWAYS"/>
                    <Button text="Parcourir..."
                            style="-fx-background-color: #4CAF50; -fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 8 15;"
                            onAction="#uploadSignature"/>
                </HBox>
            </GridPane>

            <Separator/>

            <!-- Champs spécifiques Agriculteur -->
            <VBox fx:id="agriculteurBox" spacing="10" visible="false" managed="false">
                <Label text="Informations Agriculteur"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                <GridPane vgap="15" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Adresse *" style="-fx-font-size: 21px" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="adresseField" style="-fx-font-size: 18px" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Parcelles" style="-fx-font-size: 21px" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="parcellesField" style="-fx-font-size: 18px" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- ✅ Carte pro upload -->
                    <Label text="Carte pro" style="-fx-font-size: 21px" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <TextField fx:id="carteProPathField"
                                   style="-fx-font-size: 18px"
                                   editable="false"
                                   promptText="Aucun fichier sélectionné"
                                   HBox.hgrow="ALWAYS"/>
                        <Button text="Parcourir..."
                                style="-fx-background-color: #4CAF50; -fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 8 15;"
                                onAction="#uploadCartePro"/>
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Champs spécifiques Expert -->
            <VBox fx:id="expertBox" spacing="10" visible="false" managed="false">
                <Label text="Informations Expert"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                <GridPane vgap="15" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- ✅ Certification upload -->
                    <Label text="Certification" style="-fx-font-size: 21px" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <TextField fx:id="certificationPathField"
                                   style="-fx-font-size: 18px"
                                   editable="false"
                                   promptText="Aucun fichier sélectionné"
                                   HBox.hgrow="ALWAYS"/>
                        <Button text="Parcourir..."
                                style="-fx-background-color: #4CAF50; -fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 8 15;"
                                onAction="#uploadCertification"/>
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Admin -->
            <VBox fx:id="adminBox" spacing="10" visible="false" managed="false">
                <Label text="Informations Admin"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                <GridPane vgap="15" hgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Revenu" style="-fx-font-size: 21px" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="revenuField" style="-fx-font-size: 18px" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                <Button text="Annuler"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 18px;"
                        onAction="#annuler"/>

                <Button text="Demander un code"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 18px; -fx-font-weight: bold;"
                        onAction="#demanderCode"/>
            </HBox>

        </VBox>

        <Separator/>

        <!-- Etape 2 : confirmation par code -->
        <VBox fx:id="stepCodeBox" spacing="12" visible="false" managed="false">
            <Label text="Validation"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

            <Label text="Saisissez le code de validation pour confirmer les modifications."
                   style="-fx-text-fill: #616161;"/>

            <GridPane vgap="17" hgap="80">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Code *" style="-fx-font-size: 21px" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="codeField" style="-fx-font-size: 18px" promptText="Ex: 123456" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                <Button text="Retour"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 18px;"
                        onAction="#retourEdition"/>

                <Button text="Confirmer et enregistrer"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-padding: 12 30; -fx-font-size: 18px; -fx-font-weight: bold;"
                        onAction="#confirmerEtEnregistrer"/>
            </HBox>
        </VBox>

    </VBox>
</ScrollPane>